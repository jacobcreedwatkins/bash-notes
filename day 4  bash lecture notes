=============================================


for (( ; ; ))
do
	echo "$i"
	(( i++))
	if [[ $i -gt 1337 ]]; then break; fi; done; echo "Who's a l337 H@ck3rm4n now?!"
	
	
	
	
=======================================================



for i in {0..10}
do
if [[ $i -eq 9]];then
	continue
fi

echo $i
((i++))
done



=======================================================================


echo "While loop output:"
counter=1
while [[ $counter -le 10 ]]
do
	echo $counter
	((counter++))
done


~~~~~~~~~~

echo "until loop output:"
counter=1
until [[ $counter -gt 10]]
do
	echo $counter
	((counter++))
done



