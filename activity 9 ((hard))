awk -F: '{OFS=":"}{print $1,$2}' shadow.txt | egrep "\*" | sed "s|:\*:||


awk -F: '{OFS=":"}{print $1,$2,$3}' shadow.txt | egrep "\$6" #| sed "s|:\$6[^:]*:|:${HASHED}:|"




#-------[ BASIC SED for REPLACEMENT ]-------------#


sed 's/FIND/REPLACE/g'

'g' indicates global


