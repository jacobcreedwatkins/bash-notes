#----------------[	ACTIVITY 9	]-----------------#

man openssl-passwd

openssl passwd -1 -salt bad4u Password1234

HASHED=$(openssl passwd -1 -salt bad4u Password1234)

echo $HASHED

cat shadow.txt | sed"s|:\*:|:${HASHED}:|;s|:\!:|:${HASHED}:|;s|:\$6[^:]*:|:${HASHED}|"



~~
